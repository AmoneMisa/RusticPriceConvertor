<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/bg_compare_item"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/compare_item_placeholder"
            android:textColor="@color/text_dim"
            android:textSize="12sp"
            tools:text="Товар 1" />

        <ImageButton
            android:id="@+id/btnRemove"
            style="@style/Widget.Rustic.IconButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:contentDescription="@string/cd_remove_item"
            android:src="@drawable/ic_delete_24"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <EditText
        android:id="@+id/etPrice"
        style="@style/Widget.Rustic.EditText.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/compare_price_hint"
        android:inputType="numberDecimal"
        tools:text="122" />

    <EditText
        android:id="@+id/etAmount"
        style="@style/Widget.Rustic.EditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="@string/compare_amount_hint"
        android:inputType="numberDecimal"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="780" />

    <TextView
        android:id="@+id/tvUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/compare_per_piece"
        android:textColor="@color/text_dim"
        android:textSize="12sp"
        tools:text="за 1 кг" />

</LinearLayout>
