<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resultCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_check_24"
            app:tint="@color/success_green" />

        <TextView
            android:id="@+id/tvWinnerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/compare_better"
            android:textColor="@color/success_green"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCompareItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" />

    <!-- Итог: ДВЕ СТРОКИ, БЕЗ ФОНА -->
    <LinearLayout
        android:id="@+id/winnerBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/tvWinnerProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/compare_need_more"
            android:textColor="@color/text"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvWinnerWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/compare_better"
            android:textColor="@color/success_green"
            android:textSize="14sp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
