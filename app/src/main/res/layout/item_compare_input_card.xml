<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/bg_card_glow"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/item_n"
            android:textColor="@color/text_dim"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/btnRemove"
            style="@style/Widget.Rustic.IconButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:contentDescription="@string/cd_remove_item"
            android:src="@drawable/ic_delete_24"
            android:visibility="gone" />
    </LinearLayout>

    <EditText
        android:id="@+id/etPrice"
        style="@style/Widget.Rustic.EditText.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/compare_hint_price"
        android:inputType="numberDecimal" />

    <!-- ВАЛЮТА (новое) -->
    <TextView
        android:id="@+id/tvCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="start"
        android:text="USD"
        android:textColor="@color/text_dim"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etAmount"
        style="@style/Widget.Rustic.EditText"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:hint="@string/compare_hint_amount"
        android:inputType="numberDecimal"
        android:visibility="gone" />
</LinearLayout>
