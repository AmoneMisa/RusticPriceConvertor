<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:strokeWidth="0dp"
    android:background="@drawable/bg_glow_orange"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/item_label_default"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Поле Цена (внутренний “инпут-контейнер”) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/priceFieldCard"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/surface_2"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/stroke"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/amountFieldCard"
            app:layout_constraintWidth_percent="0.46">

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="@string/price_input"
                android:inputType="numberDecimal"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/hint"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:singleLine="true" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Поле Количество (показывается только в режиме веса/объёма) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/amountFieldCard"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/surface_2"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/stroke"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabel"
            app:layout_constraintStart_toEndOf="@id/priceFieldCard"
            app:layout_constraintEnd_toStartOf="@id/btnRemove"
            app:layout_constraintWidth_percent="0.40">

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="@string/compare_amount_hint_g"
                android:inputType="numberDecimal"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/hint"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:singleLine="true" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Кнопка удаления -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/removeBtnCard"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/surface_3"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/stroke"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabel"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnRemove"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/delete"
                android:padding="10dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_delete_24"
                app:tint="@color/text_muted" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
