<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- основной градиент карточки -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:angle="270"
                android:startColor="#1B222C"
                android:endColor="#12171E"/>
        </shape>
    </item>

    <!-- мягкий "блик" сверху -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <gradient
                android:angle="90"
                android:startColor="#22FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>

    <!-- тонкий stroke -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/stroke"/>
            <solid android:color="#00000000"/>
        </shape>
    </item>

</layer-list>
