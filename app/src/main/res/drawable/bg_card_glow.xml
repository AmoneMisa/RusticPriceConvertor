<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- outer glow -->
    <item>
        <shape>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/accent_soft"/>
            <solid android:color="#0A000000"/>
        </shape>
    </item>

    <!-- main card -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape>
            <corners android:radius="16dp"/>
            <solid android:color="@color/card"/>
            <stroke android:width="1dp" android:color="#22FFFFFF"/>
        </shape>
    </item>
</layer-list>
