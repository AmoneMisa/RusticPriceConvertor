<resources>

    <style name="Theme.Rustic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/bg0</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorSecondary">@color/accent</item>
        <!-- Убираем fontFamily, чтобы не падало -->
    </style>

    <!-- Tabs -->
    <style name="Widget.Rustic.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/accent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabTextColor">@color/text_dim</item>
        <item name="tabSelectedTextColor">@color/accent</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Inputs -->
    <style name="Widget.Rustic.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="Widget.Rustic.EditText.Big">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <!-- Spinners -->
    <style name="Widget.Rustic.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_field_dark</item>
        <item name="android:popupBackground">@drawable/bg_popup</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Rustic.Spinner.Inline">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Rustic.Spinner.Pill">
        <item name="android:background">@drawable/bg_pill</item>
    </style>

    <!-- Button -->
    <style name="Widget.Rustic.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_button_orange</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Icon button (фикс: базируемся на AppCompat ImageButton) -->
    <style name="Widget.Rustic.IconButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/bg_icon_button</item>
        <item name="android:tint">@color/accent</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ShapeAppearanceOverlay_Rustic_Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text -->
    <style name="Text.Rustic.Body">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="Text.Rustic.MonoBlock">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_inner_block</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="Text.Rustic" parent="Text.Rustic.Body" />
    <style name="Widget.RPC.SpinnerNoBg" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@drawable/bg_popup</item>
    </style>
    <style name="ThemeOverlay.Rustic.TransparentDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
